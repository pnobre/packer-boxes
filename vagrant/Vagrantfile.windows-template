Vagrant.configure("2") do |config|
  config.vm.guest = :windows

  config.vm.synced_folder ".", "/vagrant"

  config.vm.provider "virtualbox" do |vb|
    vb.gui = false
    vb.memory = 4096
    vb.cpus = 4
  end

  config.vm.provider "vmware" do |v|
    v.gui = false
    v.memory = 4096
    v.vmx["numvcpus"] = "4"
  end
end