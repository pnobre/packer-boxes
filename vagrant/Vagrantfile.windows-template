Vagrant.configure("2") do |config|
  config.vm.guest = :windows

  config.vm.synced_folder ".", "/vagrant", disabled: true

  config.vm.provider :virtualbox do |vb|
    vb.gui = false
    vb.memory = 4096
    vb.cpus = 4
  end

  config.vm.provider :vmware_desktop do |vw|
    vw.gui = false
    vw.memory = 4096
    vw.cpus = "4"
  end
end